# 表示最顶层的EditorConfig配置文件
root = true

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集为utf-8
indent_style = space # 缩进风格（tab|space）
indent_size = 2 # 缩进大小
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md] # 表示仅md文件适用以下规则
insert_final_newline = false
trim_trailing_whitespace = false
